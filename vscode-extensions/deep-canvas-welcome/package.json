{
  "name": "deep-canvas-welcome",
  "displayName": "Deep Canvas Welcome",
  "description": "Custom welcome page for Deep Canvas AI Platform",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deep-canvas-welcome.showWelcome",
        "title": "Deep Canvas: Show Welcome"
      },
      {
        "command": "deep-canvas-welcome.createVibeWorkspace",
        "title": "Deep Canvas: Create Vibe Workspace"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deep-canvas-welcome",
          "title": "Deep Canvas",
          "icon": "$(star)"
        }
      ]
    },
    "views": {
      "deep-canvas-welcome": [
        {
          "id": "deep-canvas.welcome",
          "name": "Welcome",
          "when": "workbenchState == empty"
        }
      ]
    },
    "configuration": {
      "title": "Deep Canvas Welcome",
      "properties": {
        "deepCanvas.welcome.showOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Show Deep Canvas welcome page on startup"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}